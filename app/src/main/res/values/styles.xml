<resources>

    <!-- Base application theme. -->
    <style name="Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here.-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Dark" parent="Theme.AppCompat">
        <!-- Customize your theme here.-->
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryLight</item>
        <item name="colorAccent">@color/colorDarkAccent</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Light.Small" parent="Light">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Light.Large" parent="Light">
        <item name="android:textSize">26sp</item>
    </style>


    <style name="Dark.Small" parent="Dark">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Dark.Large" parent="Dark">
        <item name="android:textSize">26sp</item>
    </style>

</resources>
